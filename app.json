{
    "id": "com.burnacid.ztatz",
    "version": "0.0.1",
    "compatibility": ">=2.5.0",
    "sdk": 2,
    "brandColor": "#384042",
    "name": {
        "nl": "P1 Monitor (ztatz)",
        "en": "P1 Monitor (ztatz)"
    },
    "description": {
        "nl": "Voor het toevoegen van ondersteuning voor P1 Monitor (ztatz)",
        "en": "Adds support for P1 Monitor (ztatz)"
    },
    "category": [
        "energy",
        "tools",
        "appliances"
    ],
    "permissions": [],
    "images": {
        "large": "/assets/images/large.png",
        "small": "/assets/images/small.png"
    },
    "author": {
        "name": "Stefan Lenders",
        "email": "stefan@lenders-it.nl"
    },
    "capabilities": {
        "money": {
            "type": "number",
            "title": {
                "en": "Price",
                "nl": "Prijs"
            },
            "units": {
                "en": "â‚¬"
            },
            "getable": true,
            "setable": false,
            "uiComponent": "sensor",
            "icon": "/assets/money.svg",
            "decimals": 2,
            "insights": true
        }
    },
    "drivers": [
        {
            "id": "ztatz_p1_SmartMeter",
            "name": {
                "en": "P1 Smart Meter",
                "nl": "P1 Slimme Meter"
            },
            "class": "other",
            "capabilities": [
                "measure_power.consumed",
                "measure_power.generated",
                "meter_power.consumedL1",
                "meter_power.consumedL2",
                "meter_power.generatedL1",
                "meter_power.generatedL2",
                "meter_gas.current"
            ],
            "capabilitiesOptions": {
                "measure_power.consumed": {
                    "title": {
                        "nl": "Huidig stroomverbruik",
                        "en": "Current power usage"
                    },
                    "color": "#dde840"
                },
                "measure_power.generated": {
                    "title": {
                        "nl": "Huidige stroomgeneratie",
                        "en": "Electricity current delivery"
                    },
                    "color": "#80e840"
                },
                "meter_power.consumedL1": {
                    "title": {
                        "nl": "Elektriciteit verbruik piekuren",
                        "en": "Electricity delivery high"
                    },
                    "decimals": 3,
                    "color": "#e8cf40"
                },
                "meter_power.consumedL2": {
                    "title": {
                        "nl": "Elektriciteit verbruik daluren",
                        "en": "Electricity delivery low"
                    },
                    "decimals": 3,
                    "color": "#c2ad38"
                },
                "meter_power.generatedL1": {
                    "isGenerator": true,
                    "title": {
                        "nl": "Elektriciteit teruglevering piekuren",
                        "en": "Electricity delivery high"
                    },
                    "decimals": 3,
                    "color": "#43e840"
                },
                "meter_power.generatedL2": {
                    "isGenerator": true,
                    "title": {
                        "nl": "Elektriciteit teruglevering daluren",
                        "en": "Electricity delivery low"
                    },
                    "decimals": 3,
                    "color": "#3bc439"
                },
                "meter_gas.current": {
                    "title": {
                        "nl": "Gasverbruik",
                        "en": "Gas usage"
                    },
                    "decimals": 2,
                    "color": "#40e8d4"
                }
            },
            "settings": [
                {
                    "type": "group",
                    "label": {
                        "en": "General Info",
                        "nl": "Algemene Info"
                    },
                    "children": [
                        {
                            "id": "url",
                            "type": "label",
                            "label": {
                                "en": "URL",
                                "nl": "URL"
                            },
                            "value": ""
                        }
                    ]
                }
            ],
            "pair": [
                {
                    "id": "start"
                },
                {
                    "id": "list_devices",
                    "template": "list_devices",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        },
        {
            "id": "ztatz_p1_SmartMeter_nogen",
            "name": {
                "en": "P1 Smart Meter (No power generation)",
